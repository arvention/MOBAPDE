<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.arces.introapp.LannisterActivity"
    tools:showIn="@layout/activity_lannister">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/colorHeader"
        >

        <Button
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:textColor="@color/colorHeaderText"
            android:fontFamily="sans-serif-medium"
            android:textStyle="bold"
            android:textSize="16sp"
            android:text="@string/go_back"
            android:background="@color/colorBackButton"
            android:onClick="goBack"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="sans-serif-medium"
            android:textStyle="bold"
            android:textColor="@color/colorHeaderText"
            android:text="@string/title"
            android:textSize="30sp"
            android:gravity="center"/>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <ImageView
            android:id="@+id/lannister_sigil"
            android:layout_alignParentLeft="true"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="@color/colorLannisterBackground"
            android:src="@drawable/lannister"
            />

        <TextView
            android:id="@+id/lannister_page_header"
            android:layout_toRightOf="@id/lannister_sigil"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="@string/name_arces_caps"
            android:gravity="center_vertical|center_horizontal"
            android:textColor="@color/colorNameLannisterText"
            android:textStyle="bold|italic"
            android:fontFamily="sans-serif-medium"
            android:textSize="30sp"
            android:background="@color/colorNameLannisterBackground" />
        <ListView
            android:id="@+id/lannister_list"
            android:layout_below="@id/lannister_page_header"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorNameStarkText"
            android:padding="20dp"
            android:gravity="center_horizontal">
        </ListView>
    </RelativeLayout>
</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.arces.introapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".LayoutActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".LannisterActivity"
            android:label="@string/title_activity_lannister"
            android:parentActivityName=".LayoutActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.arces.introapp.LayoutActivity" />
        </activity>
        <activity
            android:name=".StarkActivity"
            android:label="@string/title_activity_stark"
            android:parentActivityName=".LayoutActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.arces.introapp.LayoutActivity" />
        </activity>
    </application>
    <uses-permission android:name="android.permission.INTERNET" />
</manifest>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.arces.introapp.LannisterActivity"
    tools:showIn="@layout/activity_lannister">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#557794"
        >

        <Button
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:textColor="#ffeedd"
            android:fontFamily="sans-serif-medium"
            android:textStyle="bold"
            android:textSize="16dp"
            android:text="Go Back"
            android:background="#446684"
            android:onClick="goBack"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="sans-serif-medium"
            android:textStyle="bold"
            android:textColor="#ffeedd"
            android:text="The Wildlings"
            android:textSize="30dp"
            android:gravity="center"/>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/lannister"
        >
        <TextView
            android:id="@+id/lannister_page_header"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="ARCES TALAVERA"
            android:gravity="center_vertical|center_horizontal"
            android:textColor="#949400"
            android:textStyle="bold|italic"
            android:fontFamily="sans-serif-medium"
            android:textSize="30dp"
            android:background="#940000"
            />
            <ScrollView
                android:layout_below="@id/lannister_page_header"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:textSize="20dp"
                    android:textColor="#ffffff"
                    android:padding="15dp"
                    android:layout_margin="15dp"
                    android:alpha="0.8"
                    android:background="#5f5f5f"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/text_body_lannister"
                    />
            </ScrollView>
    </RelativeLayout>
</LinearLayout>

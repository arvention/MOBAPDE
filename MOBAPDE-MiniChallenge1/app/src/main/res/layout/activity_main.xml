<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context="com.example.arces.mobapde_minichallenge1.MainActivity">

    <LinearLayout
        android:id="@+id/display"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="vertical"
        android:background="#000000"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:padding="5dp"
            android:gravity="right">

            <Button
                android:id="@+id/deleteBtn"
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:text="DELETE"
                android:textSize="18dp"
                android:textColor="#ffffff"
                android:paddingTop="2dp"
                android:background="#000000"
                android:visibility="invisible"
                android:onClick="deleteExpense"
                />

            <Button
                android:id="@+id/editBtn"
                android:layout_toRightOf="@id/deleteBtn"
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:background="#000000"
                android:text="EDIT"
                android:textSize="18dp"
                android:textColor="#ffffff"
                android:layout_margin="0dp"
                android:paddingTop="2dp"
                android:visibility="invisible"
                android:onClick="editExpense"
                />

            <Button
                android:id="@+id/addBtn"
                android:layout_toRightOf="@id/editBtn"
                android:layout_width="20dp"
                android:layout_height="30dp"
                android:text="+"
                android:textSize="22dp"
                android:textColor="#ffffff"
                android:background="#000000"
                android:onClick="addExpense"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            >
            <TextView
                android:id="@+id/item_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Spaghetti"
                android:textColor="#ffffff"
                android:textSize="36dp"
                android:gravity="bottom|left"
                android:visibility="invisible"
                android:padding="10dp"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp">
            <TextView
                android:id="@+id/instruction"
                android:layout_width="match_parent"
                android:layout_height="28dp"
                android:text="Click on an item to get started"
                android:textColor="#ffffff"
                android:textSize="18dp"
                android:paddingLeft="10dp"/>
            <TextView
                android:id="@+id/item_price"
                android:layout_width="match_parent"
                android:layout_height="28dp"
                android:text="Php 90.00"
                android:textColor="#ffffff"
                android:textSize="18dp"
                android:paddingLeft="10dp"
                android:gravity="left"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/item_date"
                android:layout_width="match_parent"
                android:layout_height="28dp"
                android:text="Feb 13, 2016"
                android:textColor="#ffffff"
                android:textSize="18dp"
                android:paddingRight="10dp"
                android:gravity="right"
                android:visibility="gone"/>
        </RelativeLayout>
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />

</LinearLayout>

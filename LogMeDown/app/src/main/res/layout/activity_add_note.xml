<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NoteActivity">

    <EditText
        android:id="@+id/addNoteTitle"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:hint="Title"
        android:textSize="20dp"
        android:padding="20dp"
        android:singleLine="true"/>

    <ScrollView
        android:id="@+id/addNoteScroll"
        android:layout_below="@id/addNoteTitle"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:padding="15dp">
        <EditText
            android:id="@+id/addNoteContent"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="18dp"
            android:hint="Tap Here to Start Writing a Note"/>
    </ScrollView>
    <LinearLayout
        android:layout_below="@id/addNoteScroll"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:gravity="bottom|right">
        <Button
            android:id="@+id/addNoteSaveButton"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:text="save"/>
        <Button
            android:id="@+id/addNoteCancelButton"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:text="cancel"/>
    </LinearLayout>
</RelativeLayout>

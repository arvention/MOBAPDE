<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <android.support.v7.widget.CardView
        android:id="@+id/home_card_layout"
        android:layout_width="match_parent"
        android:layout_height="95dp"
        android:background="@color/colorCardView"
        app:cardCornerRadius="4dp"
        app:cardBackgroundColor="@color/colorCardView"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            >

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/home_user_image"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="16dp"
                />

            <TextView
                android:id="@+id/home_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/home_user_image"
                android:layout_alignParentTop="true"
                android:textSize="16sp"
                />

            <TextView
                android:id="@+id/home_user_post_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/home_user_image"
                android:layout_below="@id/home_user_name"
                />
        </RelativeLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            android:layout_gravity="right"
            >
            <ImageButton
                android:id="@+id/home_noteEditButton"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/edit_button"
                android:background="@null"
                android:scaleType="fitCenter"
                android:layout_marginRight="10dp"
                />

            <ImageButton
                android:id="@+id/home_noteDeleteButton"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/delete_button"
                android:scaleType="fitCenter"
                android:background="@null"
                />
        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>
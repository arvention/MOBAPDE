<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackgroundColor"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.logmedown.activity.MainActivity">

    <ImageView
        android:id="@+id/image_view"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:src="@drawable/log_me_down_logo_text"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        />

    <EditText
        android:id="@+id/edit_text_login_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:layout_below="@+id/image_view"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:hint="@string/textLoginUsername"
        android:textColorHint="@color/colorGray"
        android:shadowColor="@color/colorAccent"
        android:textColor="@color/colorWhite"/>

    <EditText
        android:id="@+id/edit_text_login_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:layout_below="@+id/edit_text_login_username"
        android:layout_centerHorizontal="true"
        android:hint="@string/textLoginPassword"
        android:textColorHint="@color/colorGray"
        android:textColor="@color/colorWhite"/>

    <Button
        android:id="@+id/button_log_in"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Log Me In"
        android:layout_below="@+id/edit_text_login_password"
        android:layout_alignStart="@+id/edit_text_login_password"
        android:layout_alignEnd="@+id/edit_text_login_password" />

    <Button
        android:id="@+id/button_sign_up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign Me Up"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/button_log_in"
        android:layout_alignEnd="@+id/button_log_in"
        android:background="@color/colorAccent"/>

</RelativeLayout>

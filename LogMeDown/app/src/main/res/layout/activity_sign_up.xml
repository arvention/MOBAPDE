<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.logmedown.activity.SignUpActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:background="@color/colorBackgroundColor">
        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_centerInParent="true"
            android:src="@drawable/log_me_down_logo_text"/>
    </RelativeLayout>

    <EditText
        android:id="@+id/edit_text_sign_up_first_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:hint="First Name" />

    <EditText
        android:id="@+id/edit_text_sign_up_last_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_below="@id/edit_text_sign_up_first_name"
        android:layout_centerHorizontal="true"
        android:hint="Last Name" />

    <EditText
        android:id="@+id/edit_text_sign_up_email_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:layout_below="@id/edit_text_sign_up_last_name"
        android:layout_centerHorizontal="true"
        android:hint="Email" />

    <EditText
        android:id="@+id/edit_text_sign_up_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_below="@id/edit_text_sign_up_email_address"
        android:layout_centerHorizontal="true"
        android:hint="Username" />

    <EditText
        android:id="@+id/edit_text_sign_up_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:layout_below="@id/edit_text_sign_up_username"
        android:layout_centerHorizontal="true"
        android:hint="Password" />

    <Button
        android:id="@+id/button_sign_up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign Me Up"
        android:layout_below="@id/edit_text_sign_up_password"
        android:layout_alignStart="@id/edit_text_sign_up_password"
        android:layout_alignEnd="@id/edit_text_sign_up_password"
        android:onClick="signUpUser"
        />

</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.logmedown.activity.NoteViewActivity">

    <RelativeLayout
        android:id="@+id/bloc_view_header"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        >
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/sample_note_img"
                />
        </FrameLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            >
            <TextView
                android:id="@+id/bloc_view_bloc_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:textSize="30sp"
                android:gravity="center"
                android:textColor="@color/colorWhite"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/bloc_view_bloc_name"
                android:orientation="horizontal"
                android:padding="5dp"
                android:layout_centerHorizontal="true"
                >
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/bloc_view_bloc_user_img"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/profile_img"
                    android:layout_gravity="center_vertical"
                    />
                <TextView
                    android:id="@+id/bloc_view_user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="@color/colorLightGray"
                    android:layout_marginLeft="10dp"
                    android:layout_gravity="center_vertical"
                    />
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/bloc_view_action_menu"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="2dp"
        android:background="@color/colorBackgroundColor"
        android:orientation="horizontal"
        android:gravity="center|center_vertical"
        android:layout_below="@id/bloc_view_header"
        android:layout_centerHorizontal="true"
        >

        <ImageButton
            android:id="@+id/bloc_view_join_button"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_weight=".25"
            android:src="@drawable/join_join_bloc_icon"
            android:background="@null"
            android:scaleType="fitCenter"
            />

        <ImageButton
            android:id="@+id/bloc_view_member_button"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_weight=".25"
            android:src="@drawable/member_bloc_icon"
            android:background="@null"
            android:scaleType="fitCenter"
            />

        <ImageButton
            android:id="@+id/bloc_view_edit_button"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_weight=".25"
            android:src="@drawable/edit_bloc_icon"
            android:background="@null"
            android:scaleType="fitCenter"
            />

        <ImageButton
            android:id="@+id/bloc_view_delete_button"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_weight=".25"
            android:src="@drawable/delete_bloc_icon"
            android:scaleType="fitCenter"
            android:background="@null"
            />
    </LinearLayout>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/bloc_view_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:layout_below="@id/bloc_view_action_menu"
        >

    </android.support.v7.widget.RecyclerView>

    <LinearLayout
        android:id="@+id/bloc_view_note_action_menu"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorLightGray"
        android:orientation="horizontal"
        android:gravity="center|center_vertical"
        android:visibility="gone"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        >

        <ImageButton
            android:id="@+id/bloc_view_note_edit_button"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/edit_button"
            android:layout_marginRight="50dp"
            android:background="@null"
            android:visibility="gone"
            android:scaleType="fitCenter"
            />

        <ImageButton
            android:id="@+id/bloc_view_note_view_button"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/view_button"
            android:layout_marginRight="50dp"
            android:background="@null"
            android:visibility="gone"
            android:scaleType="fitCenter"
            />

        <ImageButton
            android:id="@+id/bloc_view_note_delete_button"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/delete_button"
            android:scaleType="fitCenter"
            android:background="@null"
            android:visibility="gone"
            android:layout_marginRight="2dp"
            />
    </LinearLayout>
</RelativeLayout>